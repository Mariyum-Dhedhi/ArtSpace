<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="buttonStyleWhite">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonStyleTransparent">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/bg_button_transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="editText">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="singleLine">true</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">17sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MediumTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SmallTextViewThin">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>

</resources>